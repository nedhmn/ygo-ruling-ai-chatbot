      "import": "./dist/upsert.js",
      "types": "./dist/upsert.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.26.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^6.0.0",
    "dotenv": "^16.5.0",
    "zod": "^3.24.4"
